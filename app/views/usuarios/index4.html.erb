<h1>Listado completo de Usuarios</h1>

<table border=1>
  <tr>
    <th>Nombre</th><th>Rut</th><th>Edad</th><th>Email</th>
    <th colspan=3></th>
  </tr>
  <% @usuarios.each do |usuario| %>
  <tr>
    <td><%= usuario.nombre %></td>
    <td><%= usuario.rut %>-<%= usuario.digito %></td>
    <td><%= usuario.edad %></td>
    <td><%= usuario.email %></td>
    <td><%= link_to 'Show', usuario %></td>
    <td><%= link_to 'Edit', edit_usuario_path(usuario) %></td>
    <td><%= link_to 'Destroy', usuario, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

