<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @product.name %>
</p>

<p>
  <b>Price:</b>
  <%= @product.price %>
</p>

<p>
  <b>Categories:</b>
  <ul>
    <% @product.category_ids.each do |p| %>
      <% @category_list.each do |cat| %>
        <% if p == cat.id %> 
          <li><%= cat.name %>
        <% end %>
      <% end %>
    <% end %>
  </ul>
  <br>
</p>


<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
